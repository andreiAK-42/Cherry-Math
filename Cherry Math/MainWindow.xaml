<Window x:Class="Cherry_Math.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Cherry Math" Height="450" Width="800" MinWidth="800" MinHeight="450" Closing="MyWindow_Closing">
    <Grid x:Name="grMain" Background="#FFF0F0F0" Loaded="grMain_Loaded" Margin="0,0,0,-16">
        <Label Content="🍒Cherry Math" HorizontalAlignment="Center" Height="81" VerticalAlignment="Top" Width="340" Background="{x:Null}" Foreground="#FF333333" FontSize="48" FontFamily="Segoe UI"/>
        <ListBox x:Name="listModules" Margin="160,86,160,28" SelectionChanged="item_selected" IsSynchronizedWithCurrentItem="False" SizeChanged="change_list_size" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Hidden" />
    </Grid>
</Window>
