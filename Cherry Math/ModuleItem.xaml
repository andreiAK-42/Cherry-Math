<UserControl x:Class="Cherry_Math.ModuleItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="164" Width="452">
    <Grid Background="#FFD2D0D0" >
        <TextBlock x:Name="ModuleName" HorizontalAlignment="Left" Height="40" Margin="189,0,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Width="253" FontSize="28"/>
        <Border BorderBrush="#FFD2D0D0" BorderThickness="2" HorizontalAlignment="Left" Margin="19,18,0,18" Width="130" 
                CornerRadius="15">
            <Image x:Name="ModuleIcon" HorizontalAlignment="Left" Margin="0,0,0,-5" Width="130" Height="130">
                <Image.Clip>
                    <RectangleGeometry Rect="0,0,125,125" RadiusX="15" RadiusY="15"/>
                </Image.Clip>
            </Image>
        </Border>

    </Grid>
</UserControl>
